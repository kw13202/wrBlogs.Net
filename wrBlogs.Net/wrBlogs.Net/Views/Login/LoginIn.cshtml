@model wrBlogs.Net.ViewModel.LoginViewModel
@{
    Layout = null;
    //使用asp-controller等熟悉需要引用Microsoft.AspNetCore.Mvc.TagHelpers，同时还要添加_ViewImports页
}

<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>wrBlogs.Net 开源博客后台登录页</title>
    <meta name="description" content="wrBlogs.Net 开源博客后台登录页">
    <meta name="keywords" content="wrBlogs.Net">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="renderer" content="webkit">
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    @* 开发环境下使用 *@
    <environment names="Development">
        <link rel="stylesheet" href="~/Content/css/amazeui.min.css" />
        <link rel="stylesheet" href="~/Content/css/amazeui.datatables.min.css" />
        <link rel="stylesheet" href="~/Content/css/app.css" />
        <link rel="stylesheet" href="~/Content/css/custom.css" />
        <script type="text/javascript" charset="utf-8" src="~/Content/js/common/jquery.min.js"></script>
        <script type="text/javascript" charset="utf-8" src="~/Content/js/common/amazeui.js"></script>
        <script type="text/javascript" charset="utf-8" src="http://cdn.bootcss.com/jquery-validate/1.16.0/jquery.validate.js"></script>
        <script type="text/javascript" charset="utf-8" src="~/Content/js/data/messages_zh.js"></script>
        <script type="text/javascript" charset="utf-8" src="~/Content/js/manage/login.js"></script>
    </environment>
    @* 预演、生产环境下使用 *@
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/Content/css/amazeui.min.css" />
        <link rel="stylesheet" href="~/Content/css/amazeui.datatables.min.css" />
        <link rel="stylesheet" href="~/Content/css/app.css" />
        <link rel="stylesheet" href="~/Content/css/custom.css" />
        <script type="text/javascript" charset="utf-8" src="~/Content/js/common/jquery.min.js"></script>
        <script type="text/javascript" charset="utf-8" src="~/Content/js/common/amazeui.min.js"></script>
        <script type="text/javascript" charset="utf-8" src="http://cdn.bootcss.com/jquery-validate/1.16.0/jquery.validate.min.js"></script>
        <script type="text/javascript" charset="utf-8" src="~/Content/js/data/messages_zh.js"></script>
        <script type="text/javascript" charset="utf-8" src="~/Content/js/manage/login.js"></script>
    </environment>
</head>

<body data-type="login" class="theme-black" >
    <div class="am-g tpl-g">
        <div class="tpl-login">
            <div class="tpl-login-content">
                <div class="tpl-login-logo">
                </div>
                <form id="loginForm" asp-area="" asp-controller="Login" asp-action="LoginIn" method="post" class="am-form tpl-form-line-form" role="form">
                    <div class="am-form-group">
                        <input asp-for="UserName" type="text" class="tpl-form-input" placeholder="请输入账号" required maxlength="20">
                    </div>

                    <div class="am-form-group">
                        <input asp-for="Password" type="password" class="tpl-form-input" placeholder="请输入密码" required maxlength="20">
                    </div>
                    <div class="am-form-group tpl-login-remember-me">
                        <input id="remember-me" type="checkbox">
                        <label for="remember-me">
                            记住密码
                        </label>
                    </div>
                    <div class="am-form-group">
                        <button type="submit" class="am-btn am-btn-primary  am-btn-block tpl-btn-bg-color-success  tpl-login-btn">提交</button>
                    </div>
                </form>
                <input id="errorInfo" type="hidden" value="@ViewBag.ErrorInfo" />
            </div>
        </div>
    </div>

    <div class="am-modal am-modal-alert" tabindex="-1" id="my-alert">
        <div class="am-modal-dialog">
            <div class="am-modal-hd">警告</div>
            <div class="am-modal-bd" id="alert-content"></div>
            <div class="am-modal-footer">
                <span class="am-modal-btn">确定</span>
            </div>
        </div>
    </div>
</body>

</html>
